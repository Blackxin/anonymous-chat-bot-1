{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "useUnknownInCatchVariables": false,
    "target": "es2017",
    "sourceMap": true,
    "allowJs": false,
    "strict": true,
    "strictNullChecks": false,
    "types": ["node"],
    "outDir": "./dist"
  },
  "include": ["./src/**/*"],
  "exclude": [
    "./node_modules",
    "./dist/**/*"
  ]
}
